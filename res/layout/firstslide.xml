<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    >


    <TextView
        android:id="@+id/titleid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:text="A* ALGO GAME"
        android:textAlignment="center"
        android:textColor="#02ABF8"
        android:textSize="40sp"
        app:fontFamily="@font/orbitron" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="25sp"
        android:layout_below="@id/titleid"
        android:layout_marginTop="450sp"
        android:textAlignment="center"
        android:id="@+id/slide1title"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--Swipe for more!!"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/slide1title"
        android:textAlignment="center"
        android:id="@+id/slide1desc"
        />


</RelativeLayout>
