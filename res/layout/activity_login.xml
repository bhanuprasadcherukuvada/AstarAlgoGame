<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/bgimg1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="50sp"
        android:id="@+id/tv_logintitle"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_logintitle"
        android:id="@+id/et_email1"
        android:textSize="20sp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:textColor="@android:color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email1"
        android:id="@+id/et_password1"
        android:textSize="20sp"
        android:hint="Create A Password"
        android:inputType="numberPassword"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:textColor="@android:color/white"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15sp"
        android:layout_marginRight="25sp"
        android:text="Login"
        android:textSize="20sp"
        android:id="@+id/btn_login"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:id="@+id/tv_registerhere"
            android:text="New User?Register Here"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:onClick="logintoregister"
            android:textColor="@android:color/white"
            />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_registerhere"
            android:layout_marginTop="20sp"
            android:id="@+id/progressbarid1"
            />






    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>